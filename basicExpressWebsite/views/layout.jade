doctype html
html
  head
    title #{title}: Express Website
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='/') Web Agency

      ul.navbar-nav.mr-auto
        li.nav-item(class=(title === 'Home' ? 'active' : ''))
          a.nav-link(href='/') Home
            span.sr-only (current)
        li.nav-item(class=(title === 'About Us' ? 'active' : ''))
          a.nav-link(href='/about') About Us
        li.nav-item(class=(title === 'Contacts' ? 'active' : ''))
          a.nav-link(href='/contacts') Contacts

    main.container(role='main')
      block content

    footer
      p &copy 2018, All Rights Reserved

    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
    script(src='/js/bootstrap.min.js')